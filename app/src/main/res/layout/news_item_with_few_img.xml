<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/news_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/news_item_horizontal_margin"
        android:layout_marginRight="@dimen/news_item_horizontal_margin"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="@dimen/news_item_elevation"
        app:cardCornerRadius="@dimen/news_item_corner_radius"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/news_item_content_horizontal_padding"
            android:paddingRight="@dimen/news_item_content_horizontal_padding"
            android:layout_marginTop="@dimen/news_item_content_vertical_margin"
            android:layout_marginBottom="@dimen/news_item_content_vertical_margin">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/news_item_title_text_size"
                    android:text="测试一下怎么样，看看再说哈哈哈，美滋滋，哈哈哈"/>

                <TextView
                    android:id="@+id/source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/news_item_source_text_size"
                    android:text="新华社"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/news_item_img_width"
                android:layout_height="@dimen/news_item_img_height"
                android:layout_gravity="center_vertical|end"
                android:scaleType="centerCrop"
                android:paddingLeft="@dimen/news_item_horizontal_margin"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>